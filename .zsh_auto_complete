# -*- mode: bash -*-
# vi: set ft=bash :

function _rspec_command () {
  if [ -e "bin/rspec" ]; then
    bin/rspec $@
  fi
}

function t() {
  if [ "$#" -gt 0 ]
  then
    SESSION_NAME="$1"
  else
    SESSION_NAME=$(basename $(pwd))
  fi
  TMUX= tmux new-session -d -s $SESSION_NAME
  tmux switch-client -t $SESSION_NAME
}

function rails-starter() {
  git clone --branch=master ~/Code/github/rails-starter "$1"
  rm -rf $1/.git
  cd $1
  cp -v .env.example .env
}
