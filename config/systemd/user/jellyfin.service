[Unit]
Description=Jellyfin Server

[Service]
Type=simple
StandardOutput=journal
ExecStartPre=docker stop jellyfin
ExecStartPre=docker rm jellyfin
ExecStart=docker run \
    --rm \
    --gpus all \
    -v /home/borhane/.srv/jellyfin/config:/config \
    -v /srv/jellyfin/cache:/cache \
    -v /run/media/borhane/DATA/:/media/videos \
    -v /run/media/borhane/DATA/Music/:/media/Music \
    -p 8096:8096 \
    --name jellyfin \
    jellyfin/jellyfin:latest

[Install]
WantedBy=default.target
