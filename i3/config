# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4
set $mod2 Mod1

# set default desktop layout (default is tiling)
workspace_layout default

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 2
default_floating_border normal
for_window [all] border pixel 2

# Hide borders
hide_edge_borders none


# shortcuts for common system configuration tasks
bindsym $mod+Shift+n exec thunar

# change borders
bindsym $mod+u border none
bindsym $mod+y border pixel 2
bindsym $mod+n border normal

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Source Code Pro 12

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec ~/.bin/terminal-open
bindsym $mod+Shift+Return exec gtk-launch $(xdg-settings get default-web-browser)

# kill focused window
bindsym $mod+Shift+q kill

# start program launcher
# bindsym $mod+d exec --no-startup-id dmenu_recency

# launch categorized menu
bindsym $mod+z exec --no-startup-id morc_menu

# dofi
bindsym $mod+space exec "rofi -combi-modi window,drun -show combi -modi combi -config ~/.config/rofi/config.rasi"
bindsym $mod2+Tab exec rofi -show window -config ~/.config/rofi/config.rasi
bindsym Ctrl+Shift+space exec --no-startup-id rofimoji --action copy

# Volume controls
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.bin/change_volume +5
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.bin/change_volume -5
bindsym XF86AudioMute exec --no-startup-id ~/.bin/change_volume toggle-mute

