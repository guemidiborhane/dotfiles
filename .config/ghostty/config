theme = dracula
shell-integration-features = cursor,sudo,no-title,ssh-env

# Font
font-family = JetBrainsMono Nerd Font
font-size = 12

resize-overlay = never
copy-on-select = false
confirm-close-surface = false
mouse-hide-while-typing = true

window-theme = ghostty
window-padding-x = 0
window-padding-y = 0
window-padding-balance = true
window-padding-color = background
window-inherit-working-directory = true
window-inherit-font-size = true
window-decoration = false

gtk-titlebar = false
gtk-single-instance = true
gtk-tabs-location = bottom
gtk-wide-tabs = false

keybind = ctrl+backspace=text:\x17

keybind = ctrl+shift+r=reload_config

keybind = alt+shift+enter=new_split:down
keybind = ctrl+shift+enter=new_split:right
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+k=goto_split:top
keybind = ctrl+shift+l=goto_split:right

# tmux prefix: ctrl+a (\x01)
# fzf-make (custom script)
keybind = alt+t=text:\x01T
# split-window -h # horizontal split
keybind = ctrl+enter=text:\x01'
# split-window # vertical window
keybind = alt+enter=text:\x01"
# new-window
keybind = ctrl+t=text:\x01c
# resize-pane -z
keybind = alt+f=text:\x01z
# previous-window
keybind = ctrl+page_up=text:\x01p
# next-window
keybind = ctrl+page_down=text:\x01n
# select-window -t :=1
keybind = ctrl+1=text:\x011
# select-window -t :=2
keybind = ctrl+2=text:\x012
# select-window -t :=0
keybind = ctrl+3=text:\x013
# last-window
keybind = ctrl+tab=text:\x01l
# switch-pane -U
keybind = ctrl+shift+left=text:\x01{
# switch-pane -D
keybind = ctrl+shift+right=text:\x01}
# $EDITOR
keybind = ctrl+e=text:\x01e
# yadm enter $EDITOR
keybind = alt+e=text:\x01E
# btop
keybind = ctrl+b=text:\x01b
# lazygit
keybind = ctrl+g=text:\x01g
# sesh connect
keybind = ctrl+n=text:\x01N

