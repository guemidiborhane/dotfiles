# vim: ft=hyprlang

$portraitMonitor = DP-1
$mainMonitor = DP-2
$secondaryMonitor = DP-3

$scale = auto
$refreshRate = 75

monitor= $portraitMonitor, 2560x1440@$refreshRate, 0x0, $scale, transform, 1
monitor= $mainMonitor, 2560x1440@$refreshRate, 1440x560, $scale
monitor= $secondaryMonitor, 2560x1440@$refreshRate, 4000x560, $scale

source = ~/.config/hypr/conf.d/nvidia.conf
