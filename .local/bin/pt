#!/bin/sh

CONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/sunsetr/geo.toml"

if [ ! -f "$CONFIG" ]; then
  echo "Config not found at $CONFIG"
  exit 1
fi

# Extract latitude and longitude using grep/sed or other tools
lat=$(tomlq '.latitude' "$CONFIG")
lon=$(tomlq '.longitude' "$CONFIG")

prayer-times --latitude "$lat" --longitude "$lon" "$@"
