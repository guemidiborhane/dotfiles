# -*- mode: sh -*-
# vi: set ft=sh :

export INITIAL_COMMIT_MSG="The same thing we do every night, Pinky - try to take over the world!"
export BATMAN_INITIAL_COMMIT_MSG="Batman! (this commit has no parents)"

[[ -s "$HOME/.zsh_auto_complete" ]] && source "$HOME/.zsh_auto_complete"

alias n="xdg-open"
alias n.="xdg-open ."
# alias code="cd ~/Code"
alias get=wget

alias sshkey="xclip -sel clip < ~/.ssh/id_ed25519.pub && notify-send -t 1000 -i ~/Code/key_ok.png 'Public Key copied to clipboard'"
alias sshconfig="vim ~/.ssh/config"

function tn() {
    local session_name=${1:-$(basename $PWD)}
    tmux new-session -As "$session_name"
}

alias zshrc="vim ~/.zshrc"
alias aliases="vim ~/.aliases"

alias uu="yay -Syyu --noconfirm"
alias cpwd="pwd | xclip -sel clip"
alias wtr="curl -s wttr.in | head -7"

# lsd
alias ls="lsd"
alias la="ls -a"
alias lla="ls -la"
alias lt="ls --tree"

# Git aliases
alias nah="git reset --hard;git clean -df"
alias oops="git commit --amend --no-edit"
alias gac="git add . && git commit -m"
alias gc="git commit -m"
alias gs="git status"
alias s="git st"
alias push="git push"
alias p="push"
alias glog="git lg"
alias amend="env HUSKY=0 git commit --amend"

alias portainer="docker run -d -P -v /var/run/docker.sock:/var/run/docker.sock -v portainer_data:/data --name portainer portainer/portainer"

# docker-compose
alias dc=docker-compose
alias dcup="dc up"
alias dcupd="dc up -d"
alias dcdn="dc down"
alias dce="dc exec"
alias dclf="dc logs -f"
alias dcps="dc ps"

alias sudo=doas
alias sudoedit="sudo vim"

alias tv=tidy-viewer
alias cat=bat
alias mc=mcli
